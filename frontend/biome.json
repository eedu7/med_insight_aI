{
    "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "on",
                "recommended": true
            }
        }
    },
    "files": {
        "ignoreUnknown": true,
        "includes": [
            "**",
            "!node_modules",
            "!.next",
            "!dist",
            "!build"
        ]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "linter": {
        "domains": {
            "next": "recommended",
            "react": "recommended"
        },
        "enabled": true,
        "rules": {
            "biomelint/correctness/noChildrenProp": "off",
            "recommended": true,
            "suspicious": {
                "noUnknownAtRules": "off"
            }
        }
    },
    "vcs": {
        "clientKind": "git",
        "enabled": true,
        "useIgnoreFile": true
    }
}